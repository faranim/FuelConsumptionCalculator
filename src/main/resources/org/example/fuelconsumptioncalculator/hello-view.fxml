<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="459.0" prefWidth="233.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.fuelconsumptioncalculator.HelloController">
    <!-- Distance input -->
    <Label fx:id="distanceLabel" text="Distance (km)" />
    <TextField fx:id="distanceField" minWidth="80.0" prefHeight="26.0" prefWidth="80.0" />

    <!-- Fuel input -->
    <Label fx:id="fuelUsedLabel" text="Fuel Used (liters)" />
    <TextField fx:id="fuelUsedField" prefWidth="160" />

    <!-- Result label and field for error handling -->
    <Label fx:id="resultLabel" text="Result:" />
    <TextField fx:id="invalidField" prefWidth="160" visible="false" /> <!-- For showing invalid input message if needed -->

    <!-- Calculate button -->
    <Button fx:id="calculateButton" onAction="#calculateFuelConsumption" text="Calculate" />

    <!-- Language buttons -->
    <Button fx:id="enButton" onAction="#switchToEnglish" text="EN" />
    <Button fx:id="frButton" onAction="#switchToFrench" text="FR" />
    <Button fx:id="jpButton" onAction="#switchToJapanese" text="JP" />
    <Button fx:id="irButton" onAction="#switchToPersian" text="IR" />
</VBox>
